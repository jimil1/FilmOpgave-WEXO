@model List<FilmOpgave_WEXO.Domain.Models.Movie>

    <h2>Movies in Genre</h2>

<div class="movie-grid">
    @foreach (var movie in Model)
    {
            <div class="movie-card">
                <a asp-controller="Home" asp-action="MovieDetails" asp-route-movieId="@movie.Id">
                    <img src="@($"https://image.tmdb.org/t/p/w500{movie.PosterPath}")" alt="@movie.Title" class="movie-poster" />
                    <h3 class="movie-title">@movie.Title</h3>
                    <p class="movie-release">@movie.ReleaseDate</p>
                </a>
            </div>
    }
</div>

<style>
    .movie-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        justify-content: center;
    }

    .movie-card {
        width: 200px;
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.2s ease-in-out;
    }

        .movie-card:hover {
            transform: scale(1.05);
        }

    .movie-poster {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }

    .movie-title {
        font-size: 16px;
        margin: 10px 0;
        color: #333;
    }

    .movie-release {
        font-size: 14px;
        color: #666;
    }
</style>
